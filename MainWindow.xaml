<Window x:Class="SaperOperator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bm="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        mc:Ignorable="d"
        Title="Mining Operator System" Height="600" Width="900">

    <Grid>
        <!-- Карта Bing Maps -->
        <bm:Map x:Name="BingMap" CredentialsProvider="YOUR_BING_MAPS_KEY"
        MouseRightButtonDown="BingMap_MouseRightButtonDown"
        MouseRightButtonUp="BingMap_MouseRightButtonUp"
        MouseMove="BingMap_MouseMove"
        Margin="10" />
        <!-- Панель керування -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button Content="Виділити зону" Click="SelectArea_Click" Width="150" />
            <Button Content="Розмістити саперів" Click="PlaceSappers_Click" Width="150" />
            <Button Content="Очистити карту" Click="ClearMap_Click" Width="150" />
            <Button Content="Знайти шляхи" Click="CalculatePaths_Click" Width="150" />
        </StackPanel>

        <TextBlock x:Name="HeightInfo" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                   Margin="10" Foreground="Black" FontSize="14"/>
    </Grid>
</Window>
